import java.util.Scanner;

interface Order {
    void placeOrder(String itemName);
}



class OnlineOrder implements Order {
    public void placeOrder(String itemName) {
        System.out.println("Online order placed for: " + itemName);
    }
}



class PhoneOrder implements Order {
    public void placeOrder(String itemName) {
        System.out.println("Phone order placed for: " + itemName);
    }
}



public class OnlineOrderSystem {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        System.out.print("Order type (online/phone): ");
        String type = sc.nextLine().toLowerCase();

        System.out.print("Enter item name: ");
        String item = sc.nextLine();

        Order order = type.equals("online") ? new OnlineOrder() : new PhoneOrder();
        order.placeOrder(item);

        sc.close();
    }
}
